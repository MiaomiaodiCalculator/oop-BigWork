<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="anchor-pane" prefHeight="377.0" prefWidth="369.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.calculator.calculation.LoginController">
   <stylesheets>
      <URL value="@style/login.css" />
   </stylesheets>
   <children>
      <ImageView id="logo" fitHeight="142.0" fitWidth="310.0" layoutX="43.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/Cats-L.png" />
         </image>
      </ImageView>
      <Label id="title" layoutX="70.0" layoutY="168.0" text="欢迎进入喵喵滴计算器">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextField fx:id="usernameArea" layoutX="30.0" layoutY="200.0" prefHeight="40.0" prefWidth="310.0" promptText="用户名" />
      <PasswordField fx:id="passwordArea" layoutX="30.0" layoutY="251.0" onKeyPressed="#log" prefHeight="40.0" prefWidth="310.0" promptText="密码">
      </PasswordField>
      <Button fx:id="loginButton" layoutX="135.0" layoutY="299.0" mnemonicParsing="false" onAction="#login" prefHeight="40.0" prefWidth="110.0" text="登录" />
      <Label id="signup" layoutX="308.0" layoutY="12.0" onMouseClicked="#signUp" prefHeight="25.0" prefWidth="39.0" text="注册">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label id="visitor" layoutX="163.0" layoutY="351.0" onMouseClicked="#justVisitor" text="游客模式">
         <font>
            <Font size="14.0" />
         </font>
         <tooltip>
            <Tooltip text="尊嘟不登录吗？计算历史将在退出后消失哦owo">
               <font>
                  <Font size="12.0" />
               </font></Tooltip>
         </tooltip>
      </Label>
   </children>
</AnchorPane>
