<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="anchor-pane" prefHeight="377.0" prefWidth="369.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.calculator.calculation.LoginController">
   <stylesheets>
      <URL value="@style/login.css" />
   </stylesheets>
   <children>
      <ImageView id="logo" fitHeight="142.0" fitWidth="310.0" layoutX="43.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/Cats-L.png" />
         </image>
      </ImageView>
      <Label id="title" layoutX="70.0" layoutY="168.0" text="欢迎进入喵喵滴计算器">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextField fx:id="usernameArea" layoutX="25.0" layoutY="212.0" prefHeight="40.0" prefWidth="322.0" promptText="账号" />
      <PasswordField fx:id="passwordArea" layoutX="25.0" layoutY="263.0" onKeyPressed="#log" prefHeight="40.0" prefWidth="322.0" promptText="密码">
      </PasswordField>
      <Button fx:id="loginButton" layoutX="137.0" layoutY="317.0" mnemonicParsing="false" onAction="#login" prefHeight="23.0" prefWidth="97.0" text="登录" />
      <Button fx:id="signup" layoutX="248.0" layoutY="317.0" mnemonicParsing="false" onAction="#signUp" prefHeight="23.0" prefWidth="97.0" text="注册" />
      <Button fx:id="visitor" layoutX="296.0" layoutY="14.0" mnemonicParsing="false" onAction="#justVisitor" prefHeight="32.0" prefWidth="59.0" text="游客">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
         <tooltip>
            <Tooltip text="尊嘟不登录吗？计算历史将在退出后消失哦owo">
               <font>
                  <Font size="12.0" />
               </font>
            </Tooltip>
         </tooltip>
      </Button>
   </children>
</AnchorPane>
